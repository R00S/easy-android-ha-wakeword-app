<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SetupWizardActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/wizard_title"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Step indicator -->
    <LinearLayout
        android:id="@+id/stepIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader">

        <View
            android:id="@+id/step1Dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:background="@drawable/step_indicator_active" />

        <View
            android:id="@+id/step2Dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:background="@drawable/step_indicator_inactive" />

        <View
            android:id="@+id/step3Dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:background="@drawable/step_indicator_inactive" />

        <View
            android:id="@+id/step4Dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:background="@drawable/step_indicator_inactive" />

        <View
            android:id="@+id/step5Dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:background="@drawable/step_indicator_inactive" />

    </LinearLayout>

    <!-- Content area -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stepIndicator">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Step icon"
                android:src="@drawable/ic_step_default"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/tvStepTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Step 1: Install Hotword Plugin" />

            <TextView
                android:id="@+id/tvStepDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                tools:text="Hotword Plugin provides always-on wake word detection." />

            <!-- Audio Level Indicator (visible only on step 3 when service is running) -->
            <LinearLayout
                android:id="@+id/audioLevelContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:visibility="gone">
                
                <TextView
                    android:id="@+id/tvAudioLevelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/audio_level_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
                
                <ProgressBar
                    android:id="@+id/audioLevelBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="32dp"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/primary" />
                
                <TextView
                    android:id="@+id/tvPredictionScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="@string/prediction_score_default"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />
                
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="32dp"
                android:text="@string/step1_button_grant"
                app:cornerRadius="24dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Navigation buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_back"
            android:visibility="invisible" />

        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_continue" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
